pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Sohaib-Ahmed869/task'
            }
        }
        
        stage('Dependency Installation') {
            steps {
                bat 'npm install' // Assuming npm is used for dependency installation
            }
        }
        
        stage('Build Docker Image') {
            steps {
                bat 'docker build -t your_image_name .'
            }
        }
        
        stage('Run Docker Image') {
            steps {
                bat 'docker run -d -p 8080:80 your_image_name'
            }
        }
        
        stage('Push Docker Image') {
            steps {
                bat 'docker login -u sohaibsipra -p nvidia940MX'
                bat 'docker push sohaibsipra/your_image_name'
            }
        }
    }
}
